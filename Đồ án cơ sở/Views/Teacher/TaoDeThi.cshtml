@model Đồ_án_cơ_sở.Models.DeThi

@{
    ViewBag.Title = "TaoDeThi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tạo đề thi</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Đề thi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NgayThi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <td style="font-weight:bold"><input type="date" name="NgayThi" required="Chọn ngày thi"/></td>
                @Html.ValidationMessageFor(model => model.NgayThi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ThoiGianThi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <td style="font-weight:bold"><input type="text" name="ThoiGianThi" required="Thời gian thi không được bỏ trống!" /></td>
                @Html.ValidationMessageFor(model => model.ThoiGianThi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SoLuongCauHoi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <td style="font-weight:bold"><input type="text" name="SoLuongCauHoi" required="Số lượng câu hỏi không được bỏ trống!" /></td>
                @Html.ValidationMessageFor(model => model.SoLuongCauHoi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về trang chủ", "Index")
</div>

