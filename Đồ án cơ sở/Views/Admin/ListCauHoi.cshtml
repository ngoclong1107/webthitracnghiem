@model IEnumerable<Đồ_án_cơ_sở.Models.CauHoi>

@{
    ViewBag.Title = "ListCauHoi";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Danh sách câu hỏi</h2>
<button type="button" onclick="location.href='@Url.Action("Create")'" class="btn btn-primary">
    <i class="fa fa-plus" aria-hidden="true"></i> Tạo câu hỏi
</button>
@using (Html.BeginForm("ListCauHoi", "Admin", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="form-group">
        <label>Môn Học:</label>@Html.DropDownList("MaMH", null, htmlAttributes: new { @class = "form-control" }) <label></label>
        <input type="submit" class="btn btn-danger" value="Tìm Môn Học">
    </div>
    <hr />
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CauHoi1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CauA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CauB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CauC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CauD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DapAn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MonHoc.TenMH)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CauHoi1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CauA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CauB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CauC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CauD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DapAn)
            </td>
            <td>
                <img src="@item.Hinh" width="150px" height="200px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonHoc.TenMH)
            </td>
            <td>
                <button type="button" onclick="location.href='@Url.Action("Edit", new {id=item.MaCH})'" class="btn btn-primary">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                </button> |
                <button type="button" onclick="location.href='@Url.Action("Details", new {id=item.MaCH})'" class="btn btn-primary">
                    <i class="fa fa-info-circle" aria-hidden="true"></i>
                </button> |
                <button type="button" onclick="location.href='@Url.Action("Delete", new {id=item.MaCH})'" class="btn btn-primary">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </button>
            </td>
        </tr>
    }

</table>
